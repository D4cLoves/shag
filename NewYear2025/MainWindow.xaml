            <Polygon Points="406,250 286,450 526,450" Fill="Green" Stroke="Black" StrokeThickness="1"/>

            <Ellipse x:Name="Ball1" Canvas.Left="396" Canvas.Top="155" Width="20" Height="20" Fill="Red" RenderTransformOrigin="2.392,1.449"/>
            <Ellipse x:Name="Ball2" Canvas.Left="401" Canvas.Top="218" Width="15" Height="15" Fill="Blue"/>
            <Ellipse x:Name="Ball3" Canvas.Left="429" Canvas.Top="378" Width="25" Height="25" Fill="Yellow" RenderTransformOrigin="0.25,2.849"/>
            <Ellipse x:Name="Ball4" Canvas.Left="355" Canvas.Top="272" Width="18" Height="18" Fill="Purple" RenderTransformOrigin="1.379,5.091"/>
            <Ellipse x:Name="Ball5" Canvas.Left="442" Canvas.Top="270" Width="20" Height="20" Fill="Red" RenderTransformOrigin="2.392,1.449"/>
            <Ellipse x:Name="Ball6" Canvas.Left="386" Canvas.Top="330" Width="15" Height="15" Fill="Blue"/>
            <Ellipse x:Name="Ball7" Canvas.Left="388" Canvas.Top="100" Width="26" Height="25" Fill="Yellow" RenderTransformOrigin="1.746,-0.958"/>
